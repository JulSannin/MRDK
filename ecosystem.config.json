{
  "apps": [{
    "name": "mrdk-api",
    "script": "./server/index.js",
    "instances": 1,
    "exec_mode": "fork",
    "env": {
      "NODE_ENV": "development"
    },
    "env_production": {
      "NODE_ENV": "production"
    },
    "error_file": "./server/logs/pm2-error.log",
    "out_file": "./server/logs/pm2-out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "autorestart": true,
    "max_memory_restart": "500M",
    "watch": false
  }]
}
