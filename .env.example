# === FRONTEND ===
# API URL для обращений с клиента
VITE_API_URL=http://localhost:5000/api

# === BACKEND ===

# Порт сервера
PORT=5000

# Окружение (development, production)
NODE_ENV=development

# Уровень логирования (debug, info, warn, error)
LOG_LEVEL=info

# CORS - разрешённые источники (через запятую)
# Для разработки используются: http://localhost:5173, http://127.0.0.1:5173
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173

# === БЕЗОПАСНОСТЬ ===

# JWT Secret - используйте generate-secret.js для генерации в production
# КРИТИЧНО: ИЗМЕНИТЕ НА СИЛЬНЫЙ КЛЮЧ В PRODUCTION!
# Команда для генерации: node server/generate-secret.js
JWT_SECRET=dev-secret-change-in-production

# Учётные данные администратора
# ТОЛЬКО ДЛЯ РАЗРАБОТКИ! В production установите через переменные окружения.
# Используйте сильные пароли (минимум 6 символов)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# === БАЗЫ ДАННЫХ ===
# Используется JSON файл для хранения (database/db.json)
# Для production рекомендуется переехать на PostgreSQL или MongoDB
